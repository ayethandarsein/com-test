                }

              header nav, footer {
                    display: none;
                }

           }

            .selected-version-none{
                background-color: #F1F1FA;
            }
            .ui-datatable .ui-datatable-header {
                text-align: right !important;
            }
            .jqplot-table-legend{
                display: none !important;
            }
